@model IEnumerable<APP_DATA.Models.Role>
@{
    ViewData["Title"] = "Show";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
                <td>
                    @if (item.TrangThai)
                    {
                        <p>Đang hoạt động</p>
                    }
                    else
                    {
                        <p>Không hoạt động</p>
                    }
                </td>
                <td>
                    <a asp-action="Update" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger btn-sm" asp-controller="Role" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
